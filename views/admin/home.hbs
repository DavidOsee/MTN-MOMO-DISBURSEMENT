<main id="main" class="main">

    <div class="pagetitle">
      <h1>Data Tables</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item">Home</li>
          <li class="breadcrumb-item">Tables</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card p-4">
            <div class="card-body">

				{{!-- SET TRANSACTION FRONT-END DISBURSEMENT AMOUNT --}}
				<div class="ui teal big label">
					TRANSACTION AMOUNT  - 
					<div class="detail">5000 <span>XAF</span></div>
				</div>
				<form id="redeemForm" method="post" class="mt-5  pb-4">
					<div class="ui fluid action input">
						<input name="user_number" type="text" placeholder="Enter your number" />
						<button id="submitBtn" type="submit" class="ui primary button">Submit</button>
						<button id="submitLoading" class="ui primary loading button d-none">Loading</button>
					</div>
            	</form>

              <h5 class="card-title">Disbursement transactions</h5>
              <p>Table listing all the transaction proceeded from the Front-End.</p>
              <br>
			  <div class="ui blue big label">
					TOTAL - 
					<div class="detail">10,000,000 <span>XAF</span></div>
				</div>
              {{!-- <p class="fs-4 float-start"> Total - <b>10.000</b> FCFA</p> --}}
              <br /><br />
            </div>
            {{!-- class="table datatable datatable-table" --}}
            <div class="datatable-container table-responsive">
              <table  id="transaction_table" class="table table-striped">
                <thead>
                  <tr>
                    <td>No.</td>
                    <td>NAME</td>
                    <td>NUMBER</td>
                    <td>AMOUNT</td>
                    <td>TRANSACTION ID</td>
                    <td>DATE</td>
                    <td>STATUS</td>
                  </tr>
                </thead>
                <tbody>
				{{#each trans_obj}}
                  <tr>
                    <td>{{id}}</td>
                    <td>{{name}}</td>
                    <td>{{number}}</td>
                    <td class="amount">{{amount}}</td>
                    <td>{{trans_id}}</td>
                    <td>{{createdAt}}</td>
                    <td class="status">{{this.status }}</td>
                  </tr>
                {{/each}}
                </tbody>
              </table>
            </div>
              <!-- End Table with stripped rows -->

          </div>
        </div>

      </div>
    {{!-- </div> --}}
    </section>

  </main>


  <script>
	$(document).ready(function() {

		$('.status').each(function(index, obj)
		{

			if($(this).text() == "SUCCESSFUL")
				$(this).addClass('text-success')

			if($(this).text() == "UNSUCCESSFUL")
				$(this).addClass('text-danger')

			if($(this).text() == "PENDING")
				$(this).addClass('text-info')
		})

	})
  </script>